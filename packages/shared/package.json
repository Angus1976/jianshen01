{
  "name": "@rocketbird/shared",
  "version": "1.0.0",
  "description": "RocketBird 共享代码库",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.js"
    },
    "./constants": {
      "types": "./dist/constants/index.d.ts",
      "import": "./dist/esm/constants/index.js",
      "require": "./dist/cjs/constants/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/esm/utils/index.js",
      "require": "./dist/cjs/utils/index.js"
    },
    "./types/*": {
      "types": "./dist/types/*.d.ts",
      "import": "./dist/esm/types/*.js",
      "require": "./dist/cjs/types/*.js"
    }
  },
  "scripts": {
    "build": "yarn run build:types && yarn run build:cjs && yarn run build:esm",
    "build:types": "tsc -p tsconfig.types.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "dev": "tsc --watch -p tsconfig.esm.json"
  },
  "devDependencies": {
    "typescript": "^5.3.2"
  }
}
